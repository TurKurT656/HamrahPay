<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chromeGray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/txt_url_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_url"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:paddingBottom="2dp"
            android:layout_marginTop="-2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_style"

            android:padding="3dp">

            <TextView
                android:id="@+id/txt_protocol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="http://"
                android:background="@color/hamrahpay_background"
                android:drawableLeft="@drawable/ic_https"
                />

            <TextView
                android:id="@+id/txt_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/hamrahpay_background"

                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="2dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:text="..." />
        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/webview_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:layout_marginBottom="-4dp"
        android:layout_marginTop="-4dp"
         />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defaultDividerHeight"
        android:background="@color/devider" />

</LinearLayout>
