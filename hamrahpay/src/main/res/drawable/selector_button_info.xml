<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false" android:drawable="@drawable/layerlist_button_info">

    </item>
    <item  android:state_pressed="true">
        <layer-list>
            <item android:bottom="10px" android:left="5px" android:right="5px" android:top="10px">
                <shape android:shape="rectangle">
                    <solid android:color="#46b8da" />
                    <corners android:radius="5px" />
                </shape>
            </item>
            <item android:bottom="11px" android:left="6px" android:right="6px" android:top="11px">
                <shape android:shape="rectangle">
                    <solid android:color="#31b0d5" />
                    <corners android:radius="5px" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>